@using WebsiteBanHang.Models;
@model SanPham

@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" >
<div class="col-md-5 single-top"> 
    <div class="flexslider">
        <ul class="slides">
            <li data-thumb="@Url.Content("~/Content/images/"+Model.HinhAnh)">
                <img src="~/Content/images/@Model.HinhAnh " />
            </li>
            <li data-thumb="@Url.Content("~/Content/images/"+Model.HinhAnh1)">
                <img src="~/Content/images/@Model.HinhAnh1" />
            </li>
            <li data-thumb="@Url.Content("~/Content/images/"+Model.HinhAnh2)">
                <img src="~/Content/images/@Model.HinhAnh2" />
            </li>
            <li data-thumb="@Url.Content("~/Content/images/"+Model.HinhAnh3)">
                <img src="~/Content/images/@Model.HinhAnh3" />
            </li>
        </ul>
    </div>
    <script>
        // Can also be used with $(document).ready()
        $(window).load(function () {
            $('.flexslider').flexslider({
                animation: "slide",
                controlNav: "thumbnails"
            });
        });
    </script>
</div>
<div class="col-md-7 single-top-in simpleCart_shelfItem">
    <div class="single-para ">
        <h4>@Model.TenSP</h4>
        <div class="star-on">
            <ul class="star-footer">
                <li><a href="#"><i> </i></a></li>
                <li><a href="#"><i> </i></a></li>
                <li><a href="#"><i> </i></a></li>
                <li><a href="#"><i> </i></a></li>
                <li><a href="#"><i> </i></a></li>
            </ul>
            <div class="review" style="text-align:left;" title="Lượt xem">
                <a href="#" > @Model.LuotXem <i class="fa fa-eye" style="font-size:20px;padding:5px 10px;" ></i></a>
            </div>
            <div class="clearfix"> </div>
        </div>

        <h5 class="item_price">@Model.DonGia.Value.ToString("#,##")  vnđ</h5>
        <p> @Html.Raw(Model.CauHinh)</p>

        <a href="#" class="add-cart item_add">Thêm vào giỏ hàng</a>
    </div>
</div>
<div class="clearfix"> </div>

<hr />
@Html.Raw(Model.MoTa)
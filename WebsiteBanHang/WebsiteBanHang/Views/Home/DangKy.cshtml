@using CaptchaMvc.HtmlHelpers;
@using CaptchaMvc;

@using WebsiteBanHang.Models;
@model ThanhVien

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

    <div class=" register">
        <h1>Đăng ký thành viên</h1>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true)
            <div class="col-md-6 register-top-grid">
                <h3>Thông tin cá nhân</h3>
                <div>
                    <span>Họ tên</span>
                    @Html.TextBox("HoTen")
                </div>
                <div>
                    <span>Số điện thoại</span>
                    @Html.TextBoxFor(x=>x.SoDienThoai)
                    @Html.ValidationMessageFor(x=>x.SoDienThoai)
                </div>
                <div>
                    <span>Email</span>
                    @Html.TextBoxFor(x=>x.Email)
                    @Html.ValidationMessageFor(x=>x.Email)
                </div>
                <div>
                    <span>Địa chỉ</span>
                    @Html.TextBox("DiaChi")
                </div>

            </div>
            <div class="col-md-6 register-bottom-grid">
                <h3>Thông tin đăng nhập</h3>
                <div>
                    <span>Tài khoản</span>
                    @Html.TextBoxFor(m => m.TaiKhoan)
                    @Html.ValidationMessageFor(m => m.TaiKhoan)
                </div>
                <div>
                    <span>Mật khẩu</span>
                    @Html.PasswordFor(x => x.MatKhau)
                    @Html.ValidationMessageFor(x => x.MatKhau)
                </div>
                <div>
                    <span>Nhập lại mật khẩu</span>
                    @Html.Password("NhapLaiMatKhau")
                </div>
                <div>
                    <span>Câu hỏi bí mật</span>
                    @Html.DropDownList("CauHoi")
                </div>
                <div>
                    <span>Câu trả lời</span>
                    @Html.TextBox("CauTraLoi")
                </div>
                <div>
                    @Html.MathCaptcha()
                </div>
                <input type="submit" value="submit">

            </div>
            <div class="clearfix"> </div>
        }
    <h2 style="color:red;">@ViewBag.ThongBao</h2>
    </div>


<style>
    .register-top-grid input[type="text"],
    .register-bottom-grid input[type="password"],
    .register-bottom-grid input[type="text"] {
        width: 100%;
        padding: 1em;
        margin: 1em 0;
        background: none;
        outline: none;
        border-radius: 3px;
        border: 1px solid #A09F9F;
        -webkit-appearance: none;
    }
    select{
        width: 100%;
        padding: 1em;
        margin: 1em 0;
        background: none;
        outline: none;
        border-radius: 3px;
        border: 1px solid #A09F9F;
        -webkit-appearance: none;
    }
</style>

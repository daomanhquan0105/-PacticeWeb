                @Html.LabelFor(model => model.HinhAnh3, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input name="HinhAnh3" type="file" />
                    <span style="color:red">@ViewBag.Upload3</span>
                    <img src="~/Content/images/@Model.HinhAnh3" style="width:300px;height:250px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<style>
    #CauHinh, #MoTa {
        width: 100%
    }
